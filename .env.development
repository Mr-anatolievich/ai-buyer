# AI-Buyer Environment Configuration
# Copy this file to .env.local and customize for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# ClickHouse Settings
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=ai_buyer
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=ai-buyer-local

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000
MLFLOW_S3_ACCESS_KEY_ID=minioadmin
MLFLOW_S3_SECRET_ACCESS_KEY=minioadmin

# =============================================================================
# FACEBOOK API CONFIGURATION
# =============================================================================
# Get these from Facebook Developer Console
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENVIRONMENT=development

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate secure random strings for production
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Backend
UVICORN_WORKERS=4
MAX_CONCURRENT_REQUESTS=100

# Celery
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry (optional)
SENTRY_DSN=

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# Uncomment and modify for custom Docker setup
# COMPOSE_PROJECT_NAME=ai-buyer
# COMPOSE_FILE=docker-compose.yml:docker-compose.override.yml
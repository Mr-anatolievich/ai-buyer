{
  "manifest_version": 3,
  "name": "Facebook Ad Accounts Extractor",
  "version": "2.0.0",
  "description": "Витягує дані про Facebook рекламні кабінети прямо з браузера з автоматичними cookies",
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.business.facebook.com/*",
    "*://*.adsmanager.facebook.com/*",
    "http://localhost:8000/*",
    "http://localhost:8082/*",
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Facebook Ad Accounts Extractor",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.business.facebook.com/*",
        "*://*.adsmanager.facebook.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}